@page "/perfilcargo"
@page "/perfilcargo/{Id:int}"
@using BANCOEMPLEOJAC.Modelo
@using BANCOEMPLEOJAC.Repositorio.Interfase
@using BANCOEMPLEOJAC.WebAssembly.Servicio.Implementacion
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims;

@inject AuthenticationStateProvider authenticationStateProvider
@inject IActividadEconomicaServicio _actividadEcoServicio

@inject IPerfilCargoServicio perfilcargoServicio
@inject IUsuarioServicio userServicio
@inject IJacServicio jacServicio
@inject IToastService toastService
@inject NavigationManager _navServicio
@attribute [Authorize(Roles = "1,2,3,4,5")]


<div class="row justify-content-center  mt-3">
    <p class="col-sm-12 col-md-8 col-xl-10 h4 mt-2">@Titulo</p>
</div>
<div class="row justify-content-center  mt-3">
    <div class="col-sm-12 col-md-8 col-xl-10">

        <EditForm Model="modelo" OnValidSubmit="GuardarCambios">
            <DataAnnotationsValidator></DataAnnotationsValidator>
            <div class="input-group mt-3">
                <span class="input-group-text bg-light">Descripción:</span>
                <input type="text" class="form-control" @bind-value="modelo.Descripcion">
            </div>
            <ValidationMessage For="@(()=>modelo.Descripcion)" />
            <div class="input-group mt-3">
                <span class="input-group-text bg-light">Tipo Contrato:</span>

                <select class="form-control" @bind-value="modelo.IdTipoContrato" @bind-value:event="onchange">
                    @if (listaTipoContrato != null)
                    {
                        @foreach (var item in listaTipoContrato)
                        {
                            if (item.IdTipoContrato == IdTipoContrato)
                            {
                                <option value="@item.IdTipoContrato" selected>@item.Nombre</option>
                            }
                            else
                            {
                                <option value="@item.IdTipoContrato">@item.Nombre</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="input-group mt-3">
                <span class="input-group-text bg-light">Requisitos:</span>
                <input type="text" class="form-control" @bind-value="modelo.Requisitos">
            </div>
            <ValidationMessage For="@(()=>modelo.Requisitos)" />
            <div class="input-group mt-3">
                <span class="input-group-text bg-light">Valor Promedio Pago:</span>
                <input type="text" class="form-control" @bind-value="modelo.Compensacion">
            </div>
            <div class="input-group mt-3">
                <label class="input-group-text bg-light justify-content-center" for="inputGroupSelect01">Actividad Económica</label>
                <select class="form-control" @bind="@modelo.IdActividadEconomica">
                    @foreach (var item in listActividadEconomica)
                    {
                        if (item.IdActividad.Equals(modelo.IdActividadEconomica))
                        {
                               <option value="@item.IdActividad" selected>@item.Descripcion:</option>
                        }
                        else
                        {
                            <option value="@item.IdActividad">@item.Descripcion:</option>
                        }
                    }
                </select>
            </div>
            <div class="input-group mt-3 text-center">
                <span class="input-group-text bg-light">JAC:</span>
                <input type="text" class="form-control" disabled value=@jac.Nombre />
            </div>
            <div class="input-group mt-3">
                <span class="input-group-text bg-light">Observaciones:</span>
                <input type="text" class="form-control" @bind-value="modelo.Observaciones">
            </div>
            <ValidationMessage For="@(()=>modelo.Observaciones)" />

            <div class="mt-3">
                <button type="submit" class="btn btn-primary" style="width:130px">@boton</button>
                @if (Borrable)
                {
                <button type="button" class="btn alert-danger" style="width:130px" @onclick="BorrarPerfilCargo">Borrar</button>
                }
                <a href="/empleo" class="btn btn-secondary" style="width:130px">Volver</a>
            </div>
        </EditForm>


    </div>

</div>
@code {
    // HECHO : QUE SE PUEDA SELECCIONAR EL TIPO DE CONTRATO EN LOS PERFILES FECHA: 27/FEB/2024 5:20PM : FIN : 08/MAR/2024 2:10PM
    // Z-BD : AGREGAR "IDUSUARIO" PARA EVITAR MODIFICACIONES DE OTROS USUARIOS A PERFILES CREADOS FECHA: 15/MAR/2024 10:59PM
    [Parameter]
    public int Id { get; set; } = 0;
    public int IdTipoContrato { get; set; }
    public int IdJAC { get; set; }
    private JacDTO jac = new JacDTO();
    private string Titulo = "Nuevo Perfil Cargo";
    private string boton = "Crear";
    private bool Borrable = false;
    private PerfilCargoDTO modelo = new PerfilCargoDTO();
    public List<ActividadEconomicaDTO> listActividadEconomica = new List<ActividadEconomicaDTO>();
    public List<TipoContratoDTO> listaTipoContrato = new List<TipoContratoDTO>();

    protected override async Task OnParametersSetAsync()
    {
        #region Autenticación de Usuario
        // autenticacion de usuario
        var authState = await authenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        int idUsuario = Convert.ToInt32(user.Claims.Where(c => c.Type == ClaimTypes.NameIdentifier).Select(c => c.Value).SingleOrDefault().ToString());
        IdJAC = Convert.ToInt32(user.Claims.Where(c => c.Type == ClaimTypes.Locality).Select(c => c.Value).SingleOrDefault().ToString());
        modelo.JacId = IdJAC;
        #endregion
        if (Id != 0)
        {


            Titulo = "Editar Perfil o Cargo";
            boton = "Actualizar";

            var response = await perfilcargoServicio.Obtener(Id);
            if (response.EsCorrecto)
            {
                modelo = (PerfilCargoDTO)response.Resultado!;
                IdTipoContrato = (int)modelo.IdTipoContrato;
                IdJAC = (int)modelo.JacId;

            }
            else
            {
                toastService.ShowWarning(response.Mensaje);
            }
            // se verifica si se puede o no mostrar el boton de borrar
            var resp = await perfilcargoServicio.VerificaPerfilEmpleoBorrar(idUsuario, Id);
            if (resp.EsCorrecto)
            {
                bool resultado = (resp.Resultado);
                Borrable = resultado;
            }
        }
        // ObtenerJac(IdJAC);
        // ObtenerActividadEconomica();
    }
    
    protected override async Task OnInitializedAsync()
    {
        ObtenerActividadEconomica();
        ListarTipoContrato();
    }
    
    public async Task ObtenerActividadEconomica(string Valor = "")
    {
        var response = await _actividadEcoServicio.Lista(Valor);

        if (response.EsCorrecto!)
        {
            listActividadEconomica = (List<ActividadEconomicaDTO>)response.Resultado!;
            if (Id==0)
            {
              modelo.IdActividadEconomica = listActividadEconomica.FirstOrDefault().IdActividad;
            }
        }
        else
        {
            listActividadEconomica = new List<ActividadEconomicaDTO>();
        }
        StateHasChanged();
    }
    
    public async Task ListarTipoContrato(string Valor = "")
    {
        var response = await perfilcargoServicio.ListaTipoContrato(Valor);

        if (response.EsCorrecto!)
        {
            listaTipoContrato = (List<TipoContratoDTO>)response.Resultado!;
            modelo.IdTipoContrato = listaTipoContrato.FirstOrDefault().IdTipoContrato;
        }
        else
        {
            listaTipoContrato = new List<TipoContratoDTO>();
        }
        StateHasChanged();
    }
    
    private async Task ObtenerJac(int id)
    {
        var response = await jacServicio.Obtener(id);

        if (response.EsCorrecto!)
        {
            jac = response.Resultado!;
        }
        else
        {
            jac = new JacDTO();
        }
        StateHasChanged();
    }
    
    private async Task GuardarCambios()
    {
        bool respuesta = true;
        string mensaje = string.Empty;

        if (Id != 0)
        {
            var response = await perfilcargoServicio.Editar(modelo);
            if (response.EsCorrecto)
            {
                mensaje = "Categoria fue modificada";
            }
            else
            {
                respuesta = false;
                mensaje = "No se pudo editar";
            }
        }
        else
        {

            var response = await perfilcargoServicio.Crear(modelo);
            if (response.EsCorrecto)
            {
                mensaje = "Perfilr o Cargo fue creado";
            }
            else
            {
                respuesta = false;
                mensaje = "No se pudo crear";
            }
        }
        if (respuesta)
        {
            toastService.ShowSuccess(mensaje);
            _navServicio.NavigateTo("/empleo");
        }
        else
        {
            toastService.ShowWarning(mensaje);
        }
    }
    private async Task BorrarPerfilCargo()
    {
        bool respuesta = true;
        string mensaje = string.Empty;

        if (Id != 0)
        {
            var response = await perfilcargoServicio.Eliminar(Id);
            if (response.EsCorrecto)
            {
                mensaje = "Categoria fue eliminada";
            }
            else
            {
                respuesta = false;
                mensaje = "No se pudo elilminar";
            }
        }
        if (respuesta)
        {
            toastService.ShowSuccess(mensaje);
            _navServicio.NavigateTo("/empleo");
        }
        else
        {
            toastService.ShowWarning(mensaje);
        }
    }

}
